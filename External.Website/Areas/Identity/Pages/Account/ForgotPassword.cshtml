@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

    <div class="col-md-12  bg-dark text-light" style="padding-top: 30px; border-radius:2em;">
        <section>
            <div class="text-center">
                <a class="navbar-brand" href="~/"><img src="/images/scm-light-v2.png" style="max-width: 10rem;" /></a>
                <h6>Enter you email address.</h6>
            </div>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-sm k-primary k-button">Submit</button>
            </form>
        </section>
        <br />
        <br />
        <br />

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
