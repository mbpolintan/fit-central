@{
    Layout = "/Pages/Shared/_SignInLayout.cshtml";
}

    <div class="k-content k-header"> 
            <div class="card login-logout-tab centered col-md-5 col-sm-5 col-xs-12" style="border-radius:0.5em;width:100%">
                <div class="card-header k-content k-header" style="border-top-right-radius:0.5em;border-top-left-radius:0.5em;">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Register">Registration</a>
                        </li>
                    </ul>
                </div>
                <div class="card-content bg-dark" style="height:80%;border-radius:0 0 0.5em 0.5em;">                    
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    
                </div>
            </div>
     
    </div>
@section Scripts{
    @RenderSection("Scripts", required: false)

    <script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        });
    });
    </script>
}


<style>
    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        /* bring your own prefixes */
        transform: translate(-50%, -50%);
    }
    .nav-tabs .nav-link.active, .nav-tabs .nav-item.show .nav-link {
        color: #9abbd2;
        background-color: #fff;
        border-color: #1861ac;        
    }
</style>