<label class="km-inline-field km-label-above col-md-6" style="width:100%;">
    <i>Select&nbsp;@(Html.LabelFor(model => model.GenderId))</i>
    @(Html.Kendo().DropDownListFor(model => model.GenderId)
        .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true", data_bind = "value:GenderId" })
        .Filter(FilterType.Contains)
        .OptionLabel("Select Gender...")
        .DataTextField("Description")
        .DataValueField("GenderId")
        .BindTo((System.Collections.IEnumerable)ViewData["gender"])
    )
</label>
<label class="km-inline-field km-label-above col-md-6" style="width:100%;">
    <i>Select&nbsp;@(Html.LabelFor(model => model.MemberStatusId))</i>
    @(Html.Kendo().DropDownListFor(model => model.MemberStatusId)
         .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true", data_bind = "value:MemberStatusId" })
         .Filter(FilterType.Contains)
         .OptionLabel("Select Member Status...")
         .DataTextField("Status")
         .DataValueField("MemberStatusId")
         .BindTo((System.Collections.IEnumerable)ViewData["status"])
    )
</label>

<label class="km-inline-field km-label-above col-md-6" style="width:100%;">
    <i>@(Html.LabelFor(model => model.Dob))</i>
    @(Html.Kendo().DatePicker()
        .Animation(true)
        .Name("datepicker")
        .Value(DateTime.Now)
        .HtmlAttributes(new { style = "width: 100%", title = "Date of Birth", data_bind = "value:Dob" })
        .DateInput()
    )
</label>


