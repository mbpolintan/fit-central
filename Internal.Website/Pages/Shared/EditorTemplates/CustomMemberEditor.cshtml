@model DataAccess.Models.Member
@using Kendo.Mvc.UI

<div class="col-md-6 Image" style="float:right;">
    <div class="col-md-12 text-center">
        <span class="text-center"> Member's Profile Photo </span>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" style="text-align:center; min-height:200px; max-height:200px;">
                <img src="/images/images.jfif" id="profilePhoto" class="imageDisplay img-thumbnail" style="min-height:200px; max-height:200px;" />
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @(Html.Kendo().Upload()
            .Name("file")
            .Validation(validation =>
            {
                validation.AllowedExtensions(new string[] { ".jpg", ".jpeg", ".png", ".bmp", ".gif" });
                validation.MaxFileSize(500000);
            })
            .Multiple(false)
            .Async(a => a.AutoUpload(true))
            .Events(e => e.Select("onSelectImg"))
        )
    </div>
</div>
@(Html.TextBoxFor(model => model.Image, new { type="hidden", style = "width:100%", @class = "k-textbox", data_bind = "value:Image" }))

<label class="km-inline-field km-label-above col-md-6" style="width:100%;">
    <i> @(Html.LabelFor(model => model.FirstName))</i>
    @(Html.TextBoxFor(model => model.FirstName, new { required = "required", style = "width:100%", @class = "k-textbox", data_bind = "value:FirstName" }))
</label>

<label class="km-inline-field km-label-above col-md-6" style="width:100%;">
