@*@model DataAccess.Models.AppUser*@
@model DataAccess.ViewModels.UserViewModel
@using Kendo.Mvc.UI

<label class="km-inline-field km-label-above" style="width:100%;">
    <i> @(Html.LabelFor(model => model.UserEmail))</i>
    @(Html.TextBoxFor(model => model.UserEmail, new { required = "required", style = "width:100%", @class = "k-textbox", data_bind = "value:UserEmail" }))
</label>
<label class="km-inline-field km-label-above" style="width:100%;">    
    @(Html.Kendo().DropDownListFor(model => model.AppGroupId)      
        .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true" })
        .Filter(FilterType.Contains)
        .OptionLabel("Select Group...")
        .DataTextField("Description")
        .DataValueField("AppGroupId")    
        .BindTo((System.Collections.IEnumerable)ViewData["groups"])
    )
</label>