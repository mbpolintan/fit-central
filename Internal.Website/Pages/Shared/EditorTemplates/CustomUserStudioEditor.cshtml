@model DataAccess.ViewModels.UserStudioViewModel
@using Kendo.Mvc.UI

<label class="km-inline-field km-label-above" style="width:100%;">  
    @(Html.Kendo().DropDownListFor(model => model.StudioId)
        .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true" })
        .OptionLabel("Select Studio...")
        .DataValueField("StudioId")
        .DataTextField("StudioName")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Url("/StudioAdmin/ManagerAdmin?handler=ReadGlobalStudio");
            });
        })
    //.BindTo((System.Collections.IEnumerable)ViewData["studios"])
    )
</label>