@model DataAccess.Models.TrainingGymUser
@using Kendo.Mvc.UI

<label class="km-inline-field km-label-above" style="width:100%;">
      @(Html.Kendo().DropDownListFor(model => model.GlobalTrainingGymId)
        .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true" })
        .Filter(FilterType.Contains)
        .OptionLabel("Select Parent Studio...")
        .DataTextField("GymName")
        .DataValueField("GlobalTrainingGymId")
        .BindTo((System.Collections.IEnumerable)ViewData["trainingGyms"])
    )
</label>