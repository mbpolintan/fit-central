@model DataAccess.Models.GlobalStudio
@using Kendo.Mvc.UI

<label class="km-inline-field km-label-above" style="width:100%;">
    <i>Select&nbsp;@(Html.LabelFor(model => model.StudioId))</i>
    @(Html.Kendo().DropDownListFor(model => model.StudioId)
        .HtmlAttributes(new { required = "required", style = "width:100%;", data_value_primitive = "true", data_bind = "value:StudioId" })
        .Filter(FilterType.Contains)       
        .DataTextField("StudioName")
        .DataValueField("StudioId")
        .BindTo((System.Collections.IEnumerable)ViewData["studios"])    
    )
</label>